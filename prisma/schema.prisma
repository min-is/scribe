// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Physician {
  id        String   @id @default(cuid())
  slug      String   @unique
  name      String
  specialty String?
  credentials String?

  // Preferences
  noteTemplate String?
  preferences  Json?

  // Metadata
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([slug])
}
